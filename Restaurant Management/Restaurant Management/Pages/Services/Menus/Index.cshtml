@page
@model Restaurant_Management.Pages.Services.Menus.IndexModel

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].Slug)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].Summary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].UpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Menu) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slug)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Summary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
