<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TableTop[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TableTop[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TableTop[0].Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TableTop[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TableTop[0].UpdatedAt)
