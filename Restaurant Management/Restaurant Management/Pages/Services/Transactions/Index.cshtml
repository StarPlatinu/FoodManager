@model Restaurant_Management.Pages.Services.Transactions.IndexModel

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].Mode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].UpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].Vendor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Transaction) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vendor.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
